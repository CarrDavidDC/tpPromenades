<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:text="tpPromenades"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="14dp"
        android:src="@drawable/randonneur" />

    <EditText
        android:id="@+id/etPasswordMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnMdpOublie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConnexion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Mot de passe oubliÃ©" />

    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordMainActivity"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/btnInscription"
        android:text="Connexion" />

    <Button
        android:id="@+id/btnInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnConnexion"
        android:layout_alignBottom="@+id/btnConnexion"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:text="Inscription" />

    <EditText
        android:id="@+id/etLoginMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPasswordMainActivity"
        android:layout_alignRight="@+id/etPasswordMainActivity"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Identifiant" />

</RelativeLayout>