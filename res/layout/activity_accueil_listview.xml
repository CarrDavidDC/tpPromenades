<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="wrap_content">

	<TextView
	android:id="@+id/name"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"/>

	<TextView
	android:id="@+id/length"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"/>

	<TextView
	android:id="@+id/duration"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"/>
</LinearLayout>