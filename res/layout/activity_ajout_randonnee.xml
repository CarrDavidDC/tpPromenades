<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AjoutRandonnee" >

    <TextView
        android:id="@+id/tvAjoutRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ajout randonnée"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/ibPrecedentAjoutRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_back" />

    <EditText
        android:id="@+id/etNomRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvAjoutRandonnee"
        android:layout_below="@+id/ibPrecedentAjoutRandonnee"
        android:layout_marginTop="42dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvNomRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNomRandonnee"
        android:layout_below="@+id/ibPrecedentAjoutRandonnee"
        android:layout_marginTop="28dp"
        android:text="Nom de la randonnée" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tvDifficulteDuParcours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar1"
        android:layout_alignLeft="@+id/ibPrecedentAjoutRandonnee"
        android:layout_marginBottom="15dp"
        android:text="Difficulté du parcours" />

    <TextView
        android:id="@+id/tvDistanceRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDifficulteDuParcours"
        android:layout_below="@+id/ratingBar1"
        android:layout_marginTop="18dp"
        android:text="Distance (km)" />

    <Button
        android:id="@+id/btnEnregistrerAjoutRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="Envoyer" />

    <EditText
        android:id="@+id/distanceRandonnee"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tvAjoutRandonnee"
        android:layout_alignRight="@+id/btnEnregistrerAjoutRandonnee"
        android:layout_below="@+id/tvDistanceRandonnee"
        android:ems="10" />

    <Button
        android:id="@+id/btnPlus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/distanceRandonnee"
        android:layout_alignRight="@+id/etNomRandonnee"
        android:layout_below="@+id/tvDistanceRandonnee"
        android:layout_toRightOf="@+id/distanceRandonnee"
        android:text="+" />

    <Button
        android:id="@+id/btnMoins"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/distanceRandonnee"
        android:layout_toLeftOf="@+id/distanceRandonnee"
        android:text="-" />

</RelativeLayout>