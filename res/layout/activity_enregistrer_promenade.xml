<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:weightSum="1"
  android:background="@drawable/img_accueil2">

<LinearLayout
    android:id="@+id/llFirstPercent"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight=".10"
    android:gravity="center"
    android:orientation="horizontal" >			        
    
<Button
    android:id="@+id/idEnregistrementPromenade"
			            android:layout_width="0px"
			            android:layout_height="wrap_content"
 						android:layout_weight="1"
    android:text="@string/titleButtonEnregistrementEnregistrerPromenade" />
<Button
    android:id="@+id/idEnregistrer"
			            android:layout_width="0px"
			            android:layout_height="wrap_content"
 						android:layout_weight="1"
    android:text="@string/titleButtonEnregistrerEnregistrerPromenade" />

</LinearLayout>

<LinearLayout
    android:id="@+id/llThirdPercent"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight=".9"
    android:gravity="center"
    android:orientation="vertical" >
	
<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</LinearLayout>
</LinearLayout>