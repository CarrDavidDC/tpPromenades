<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EnregistrerCheminRandonnee" >

    <TextView
        android:id="@+id/tvEnregistrementParcoursEnregistrerCheminRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enregistrement d&apos;un parcours"
        android:textSize="12dp" />

    <ImageButton
        android:id="@+id/ibPrecedentAjoutRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tvEnregistrementParcoursEnregistrerCheminRandonnee"
        android:src="@drawable/ic_action_back" />

    <Button
        android:id="@+id/btnDebutEnregistrerCheminRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibPrecedentAjoutRandonnee"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/ibPrecedentAjoutRandonnee"
        android:text="DÃ©but" />

    <Button
        android:id="@+id/btnFinEnregistrerCheminRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDebutEnregistrerCheminRandonnee"
        android:layout_alignBottom="@+id/btnDebutEnregistrerCheminRandonnee"
        android:layout_alignRight="@+id/tvEnregistrementParcoursEnregistrerCheminRandonnee"
        android:text="Fin" />

    <Button
        android:id="@+id/btnEnregistrerEnregistrerCheminRandonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Enregistrer" />

</RelativeLayout>
